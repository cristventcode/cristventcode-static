
@Styles.Render("~/Content/LyeCalculatorStyles/custom-style.css")


<div class="section-hero section-hero-small">
    <div class="hero">
        <div class="container">
            <div class="hero-text">
                <h1> Lye Calculator </h1>
                <p> Make your soap</p>
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12 large-holder no-padding lye-cal-all">
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            <div id="step1-container" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            Step 1 - Type / Units
                        </a>
                    </h3>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <h4>Choose your soap type and measurement units.</h4>
                        <hr />
                        <div class="form-group">
                            <select id="type-select" class="form-control">
                                <option selected="selected" value="-1">Type</option>
                                <option value="solid">Solid</option>
                                <option value="liquid">Liquid</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="unit-select" class="form-control">
                                <option selected="selected" value="-1">Unit</option>
                                <option value="ounce">Ounces</option>
                                <option value="gram">Grams</option>
                            </select>
                        </div>
                        <div id="step1-error" class="error-message">
                        </div>
                        <button id="step1-submit" class="btn btn-sm btn-success"> Go </button>
                    </div>
                </div>
            </div>
            <div id="step2-container" class="panel panel-default hidden">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                            Step 2 - Ingredients
                        </a>
                    </h3>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        <h4>Enter in your ingredients by weight</h4>
                        <hr />
                        <div class="row">
                            <div class="col-xs-9 col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" for="form-group-input">Almond Oil</label>
                                    <input type="text" class="form-control ing-input" id="form-group-input" placeholder="0">
                                </div>
                            </div>
                            <div class="col-xs-9 col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" for="form-group-input">Avocado Butter</label>
                                    <input type="text" class="form-control ing-input" id="form-group-input" placeholder="0">
                                </div>
                            </div>
                            <div class="col-xs-9 col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" for="form-group-input">Castor Oil</label>
                                    <input type="text" class="form-control ing-input" id="form-group-input" placeholder="0">
                                </div>
                            </div>
                            <div class="col-xs-9 col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" for="form-group-input">Kokum Butter</label>
                                    <input type="text" class="form-control ing-input" id="form-group-input" placeholder="0">
                                </div>
                            </div>
                            <div class="col-xs-9 col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" for="form-group-input">Mango Butter</label>
                                    <input type="text" class="form-control ing-input" id="form-group-input" placeholder="0">
                                </div>
                            </div>
                        </div>
                        <hr />
                        <button class="btn btn-sm btn-success" id="step2-submit"> Get Results </button>
                    </div>
                </div>
            </div>
            <div id="step3-container" class="panel panel-default hidden">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                            Step 3 - Results
                        </a>
                    </h3>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6 print-view no-padding" id="result-table-holder">
                                <table class="table" id="result-table">
                                    <tr class="table-heading">
                                        <th>Lye & Liquid</th>
                                        <th>Amount</th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td>Lye (<span id="lye-type"> </span>)</td>
                                        <td id="lye-td"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td><span id="unit-type"></span> of liquid</td>
                                        <td id="weight-td"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td><b>Total</b></td>
                                        <td id="lyeWeight-td"></td>
                                        <td></td>
                                    </tr>
                                    <tr id="ing-list-section" class="table-heading">
                                        <th>Oils & Fats</th>
                                        <th>Amount</th>
                                        <th>%</th>
                                    </tr>
                                    <tr>
                                        <td><b>Total</b></td>
                                        <td id="oilsFats-td"></td>
                                        <td>100 %</td>
                                    </tr>
                                    <tr>
                                    <tr class="table-heading">
                                        <th>Totals</th>
                                        <th>Amount</th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td>Lye & Liquid</td>
                                        <td id="total-lyeWeight-td"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Oils & Fats</td>
                                        <td id="total-oilsFats-td"></td>
                                        <td></td>
                                    </tr>
                                    <tr class="table-heading">
                                        <th>Total Batch Yield</th>
                                        <th id="total-batch-td"></th>
                                        <th></th>
                                    </tr>
                                </table>
                            </div>
                            <div id="testing" class="col-sm-6 print-view">
                                <div class="form-group recipe-info">
                                    <label>Recipe - Title</label>
                                    <input class="form-control" type="text" />
                                    <br />
                                    <label>Recipe - Comments / Notes</label>
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                                <button class="btn btn-sm btn-success" id="print-page-btn">Print Results</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/LyeCalculatorScripts/actions.js")


